<h1 class="text-center">Categories</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
<% @categories.each do |category|%>
<div class="row justify-content-md-center">
<div class="col-8 mt-4">
<div class="card text-center shadow mb-5 bg-body rounded">
    <div class="card-body">
 
            <div class:"card-body">
            <%= link_to category.name,category_path(category)  %>  
            <p class="card-text"><%= pluralize(category.articles.count,"article") %></p>
          
    </div>
    <div class="card-footer text-muted">
        Created <%= time_ago_in_words(category.created_at) %> ago,Updated <%=time_ago_in_words(category.updated_at) %> ago
    </div>
</div>
</div>
</div>
<%end %>
</div>

<%= link_to 'Create new article',new_article_path %>
</div>

<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>